<h3>Update Album "<%= @album.title %>"</h3>

<form action="<%= album_url(@album) %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <%= auth_token %>

  <label for="album_title_id">Album Title</label>
  <input
    type="text"
    name="album[title]"
    id="album_title_id"
    value="<%= @album.title %>">
  <br>

  <label for="band_name_id">Band:</label>
  <select name="album[band_id]", id="band_name_id">
    <option></option>
    <% @bands.each do |band| %>
      <option
        <%= @album.band_id == band.id ? "selected" : "" %>
        value="<%= band.id %>">
        <%= band.name %>
      </option>
    <% end %>
  </select>
  <br>

  <input
    type="radio"
    name="album[live_or_studio]"
    value="Live"
    id="live_or_studio_id"
    <%= @album.live_or_studio == "Live" ? "checked" : "" %>>
  <label for="live_or_studio_id">Live</label>
  <input
    type="radio"
    name="album[live_or_studio]"
    value="Studio"
    id="live_or_studio_id"
    <%= @album.live_or_studio == "Studio" ? "checked" : "" %>>
  <label for="live_or_studio_id">Studio</label>
  <br>

  <input type="submit" value="Update Album Info!">
  </p>

</form>
